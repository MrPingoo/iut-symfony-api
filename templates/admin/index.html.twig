{% extends 'base.html.twig' %}

{% block title %}Admin Category index{% endblock %}

{% block body %}
    <h1>Admin Category index</h1>
    <h2>Date : {{ date|date('d/m/Y') }}</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            {% if loop.index is even %}
                {% set active = '' %}
            {% else %}
                {% set active = 'table-active' %}
            {% endif  %}
            <tr class="{{ active }}">
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('admin_category_show', {'id': category.id}) }}">show</a>
                    <a href="{{ path('admin_category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_category_new') }}">Create new</a>
{% endblock %}
